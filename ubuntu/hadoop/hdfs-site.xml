    <property>
        <name>dfs.replication</name>
        <value>1</value>
        <description>slave 서버 개수 지정</description>
    </property>
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>/apps/hadoop/hdfs/namenode</value>
        <description>master 서버 데이터 저장 경로 지정</description>
    </property>
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>/apps/hadoop/hdfs/datanode</value>
        <description>slave 서버 데이터 저장 경로 저장</description>
    </property>
    <property>
        <name>dfs.webhdfs.enabled</name>
        <value>true</value>
